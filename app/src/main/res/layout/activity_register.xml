<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="347dp"
        android:layout_height="158dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/mediaspace_f"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headingTextView"
                android:layout_width="242dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="16dp"
                android:padding="10dp"
                android:text="@string/create_account"
                android:textColor="?attr/colorOnBackground"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_emailTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeErrorColor="?colorError"
                app:boxStrokeWidth="2dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/icon_error"
                app:errorIconTint="?colorError"
                app:errorTextColor="?colorError"
                app:helperTextTextColor="?colorError"
                app:startIconDrawable="@drawable/icon_mail"
                app:startIconTint="?colorSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- First TextInputLayout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_titleTextField"
                    android:layout_width="2dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:paddingEnd="10dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeErrorColor="?colorError"
                    app:boxStrokeWidth="2dp"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/icon_error"
                    app:errorIconTint="?colorError"
                    app:errorTextColor="?colorError"
                    app:helperTextTextColor="?colorError"
                    app:startIconDrawable="@drawable/icon_profile"
                    app:startIconTint="?colorSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/registerTitleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/register_firstNameTextField"
                    android:layout_width="140dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxStrokeErrorColor="?colorError"
                    app:boxStrokeWidth="2dp"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@drawable/icon_error"
                    app:errorIconTint="?colorError"
                    app:errorTextColor="?colorError"
                    app:helperTextTextColor="?colorError"
                    app:startIconDrawable="@drawable/icon_profile"
                    app:startIconTint="?colorSecondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/registerFirstNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_lastNameTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeErrorColor="?colorError"
                app:boxStrokeWidth="2dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/icon_error"
                app:errorIconTint="?colorError"
                app:errorTextColor="?colorError"
                app:helperTextTextColor="?colorError"
                app:startIconDrawable="@drawable/icon_profile"
                app:startIconTint="?colorSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerLastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile_numberTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeErrorColor="?colorError"
                app:boxStrokeWidth="2dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/icon_error"
                app:errorIconTint="?colorError"
                app:errorTextColor="?colorError"
                app:helperTextTextColor="?colorError"
                app:startIconDrawable="@drawable/icon_mobile_phone"
                app:startIconTint="?colorSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_passwordTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeErrorColor="?colorError"
                app:boxStrokeWidth="2dp"
                app:endIconMode="password_toggle"
                app:endIconTint="?colorSecondary"
                app:errorEnabled="true"
                app:errorIconDrawable="@null"
                app:errorIconTint="?colorError"
                app:errorTextColor="?colorError"
                app:helperTextTextColor="?colorError"
                app:startIconDrawable="@drawable/icon_lock"
                app:startIconTint="?colorSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_confirmTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxStrokeErrorColor="?colorError"
                app:boxStrokeWidth="2dp"
                app:endIconMode="password_toggle"
                app:endIconTint="?colorSecondary"
                app:errorEnabled="true"
                app:errorIconDrawable="@null"
                app:errorIconTint="?colorError"
                app:errorTextColor="?colorError"
                app:helperTextTextColor="?colorError"
                app:startIconDrawable="@drawable/icon_lock"
                app:startIconTint="?colorSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="@string/sign_up"
                android:textSize="16sp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/goBackTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:padding="15dp"
                android:text="Go back"
                android:textColor="?colorPrimary"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
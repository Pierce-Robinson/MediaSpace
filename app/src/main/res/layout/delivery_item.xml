<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deliveryContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="3dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addDeliveryButton"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Add delivery address"
        app:icon="@drawable/icon_location"
        android:visibility="gone"
        app:iconSize="26sp"
        android:textSize="16sp"
        app:cornerRadius="20dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/deliveryContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/deliveryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deliveryCity"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Delivery City"
                android:maxWidth="300dp"
                android:minWidth="300dp"
                android:maxHeight="65dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/deliveryLines"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Delivery Lines"
                android:maxWidth="300dp"
                android:minWidth="300dp"
                android:maxHeight="65dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_margin="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/deliveryDelete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_delete_product" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ProfileFragment"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03">

        <!-- Notifications Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconPerson"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="im an image"
                android:src="@drawable/icon_profile" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPersonalInfo"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:height="60dp"
                android:backgroundTint="?attr/colorSecondary"
                android:checked="false"
                android:padding="8dp"
                android:text="@string/personal_info"
                app:cornerRadius="20dp"
                app:strokeWidth="0dp" /> <!-- Align to the right -->

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconOrderHistory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="im an image"
                android:src="@drawable/icon_list" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrderHistory"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:height="60dp"
                android:backgroundTint="?attr/colorSecondary"
                android:checked="false"
                android:padding="8dp"
                android:text="@string/order_history"
                app:cornerRadius="20dp"
                app:strokeWidth="0dp" /> <!-- Align to the right -->

        </LinearLayout>

        <!-- Max Distance Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="im an image"
                android:src="@drawable/icon_heart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWishList"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:height="60dp"
                android:backgroundTint="?attr/colorSecondary"
                android:checked="false"
                android:padding="8dp"
                android:text="@string/wish_list"
                app:cornerRadius="20dp"
                app:strokeWidth="0dp" /> <!-- Align to the right -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconMail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="im an image"
                android:src="@drawable/icon_mail" />

            <TextView
                android:id="@+id/textNotifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_weight="1"
                android:text="@string/email_notifications"
                android:textSize="18sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/notificationsCheckbox"
                style="@style/Widget.App.Switch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:checked="false"
                android:padding="8dp" /> <!-- Align to the right -->
        </LinearLayout>

    </LinearLayout>
    <!-- logout Button -->

    <!-- Delete Account Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="Log Out"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.68"
        app:strokeWidth="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteAccountButton"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="?attr/colorError"
        android:text="Delete Account"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.823"
        app:strokeWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>